{
	"name": "vikings-client",
	"private": true,
	"version": "1.0.8",
	"scripts": {
		"dev": "DEBUG=vite:plugin:mkcert HTTPS=true vite --host",
		"dev:http": "yarn run reset:vite && vite",
		"dev:firebase-emulator": "yarn run build && firebase emulators:start",
		"build": "yarn run reset:vite && vite build",
		"predeploy": "yarn run build",
		"deploy": "firebase use ethwarsaw-hackathon && firebase deploy",
		"preview": "yarn run build && vite preview",
		"analyze": "yarn run reset:vite && cross-env ANALYZE=true yarn run build",
		"lint:fix": "eslint ./src --ext .jsx,.js,.ts,.tsx --quiet --fix --ignore-path ./.gitignore",
		"lint": "TIMING=1 eslint src/**/*.ts* --fix",
		"type-check": "tsc --noEmit",
		"reset:vite": "rimraf ./.cache ./dist",
		"reset:yarn": "rimraf ./node_modules",
		"clean": "yarn reset:vite && yarn reset:yarn"
	},
	"dependencies": {
		"core": "*",
		"utils": "*",
		"@tanstack/react-query": "^4.0.10",
		"@tanstack/react-query-devtools": "^4.0.10",
		"axios": "^0.27.2",
		"backend-services": "*",
		"buffer": "^6.0.3",
		"classnames": "^2.3.1",
		"framer-motion": "^6.4.3",
		"joi": "^17.6.0",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-error-boundary": "^3.1.4",
		"react-router-dom": "^6.3.0",
		"react-toastify": "^9.0.7",
		"usehooks-ts": "^2.6.0",
		"web3-services": "*"
	},
	"devDependencies": {
		"@acme/sass": "*",
		"@acme/tsconfig": "*",
		"@esbuild-plugins/node-globals-polyfill": "^0.1.1",
		"@types/prettier": "^2.6.3",
		"@types/react": "^18.0.15",
		"@vitejs/plugin-react": "^1.3.2",
		"@vitejs/plugin-react-refresh": "^1.3.6",
		"cross-env": "^7.0.3",
		"rimraf": "^3.0.2",
		"rollup-plugin-node-polyfills": "^0.2.1",
		"rollup-plugin-visualizer": "^5.6.0",
		"sass": "^1.53.0",
		"typescript": "^4.7.4",
		"vite": "^2.9.14",
		"vite-plugin-chunk-split": "^0.2.4",
		"vite-plugin-imagemin": "^0.6.1",
		"vite-plugin-mkcert": "^1.7.2",
		"vite-plugin-svgr": "^2.2.0",
		"vite-tsconfig-paths": "^3.3.17"
	}
}
